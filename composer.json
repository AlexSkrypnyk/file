{
    "name": "alexskrypnyk/file",
    "description": "Provides file manipulations functionality.",
    "license": "GPL-2.0-or-later",
    "type": "library",
    "authors": [
        {
            "name": "Alex Skrypnyk",
            "email": "alex@drevops.com",
            "homepage": "https://alexskrypnyk.com",
            "role": "Maintainer"
        }
    ],
    "homepage": "https://github.com/alexskrypnyk/file",
    "support": {
        "issues": "https://github.com/alexskrypnyk/file/issues",
        "source": "https://github.com/alexskrypnyk/file"
    },
    "require": {
        "php": ">=8.3",
        "symfony/console": "^7",
        "symfony/filesystem": "^7.2"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8",
        "dealerdirect/phpcodesniffer-composer-installer": "^1",
        "drupal/coder": "^8.3",
        "ergebnis/composer-normalize": "^2.42",
        "mikey179/vfsstream": "^1.6",
        "opis/closure": "^4.0",
        "phpstan/phpstan": "^2",
        "phpunit/phpunit": "^12",
        "rector/rector": "^2"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "AlexSkrypnyk\\File\\": "src/"
        },
        "files": [
            "File.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AlexSkrypnyk\\File\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true
        },
        "discard-changes": true,
        "sort-packages": true
    },
    "scripts": {
        "build": [
            "@composer bin box require --dev humbug/box",
            "box validate",
            "box compile"
        ],
        "lint": [
            "phpcs",
            "phpstan",
            "rector --clear-cache --dry-run"
        ],
        "lint-fix": [
            "rector --clear-cache",
            "phpcbf"
        ],
        "reset": "rm -Rf vendor vendor-bin composer.lock",
        "test": "phpunit --no-coverage",
        "test-coverage": "php -d pcov.directory=. vendor/bin/phpunit"
    }
}
